{
  "manifest_version": 2,

  "name": "Formatter",
  "description": "This extension formats web pages to make them more readable.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [ {
    "js": [ "content.js" ],
    "matches": ["<all_urls>"]
  } ],
  "permissions": [
    "activeTab"
  ]
}
